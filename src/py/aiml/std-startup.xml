<aiml version="1.0.1" encoding="UTF-8">
    <!-- std-startup.xml -->

    <!-- Category is an atomic AIML unit -->
    <category>
        <!-- (TEMPORARY) Pattern to match in user input -->
        <!-- If user enters "LOAD AIML B" -->
        <!-- Pattern overridden in lib/alice/zz_final.aiml -->
        <pattern>LOAD AIML B</pattern>

        <!-- Template is the response to the pattern -->
        <!-- This learn an aiml file -->
        <template>
            <!-- =============================================================
                 The alice aiml files have non-standard tags:
                 <learn> Used in aiml learning
                 <eval>  Primitive math tags
            ============================================================== -->
            <learn>data/standard/*.aiml</learn>
            <learn>data/alice/*.aiml</learn>
            <learn>data/local/*.aiml</learn>
            <!-- You can add more aiml files here -->
            <!--<learn>more_aiml.aiml</learn>-->
        </template>

    </category>

</aiml>
